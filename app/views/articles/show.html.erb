<% title @article.title, true %>
<%#
---------------------
SINGLE BLOG POST PAGE
---------------------
%>

<div id="content-blog" class="blog-single">

  <h4 class="post-title"><%= @article.title %></h4>
  <p class="date">
    <%= @article.created_at.strftime("%d %b %Y") %>
    -
    by: <%= link_to @article.user.name, @article.user %>
  </p>
  <p><%= @article.text %></p>

  <% if logged_in? %>
    <% if current_user?(@article.user) || admin_user?(current_user) %>
      <div id="post-controls-wrapper">
        <div id="post-controls">
          <%= link_to 'Back to Blog', articles_path, :class => 'button' %> <%= link_to 'Edit', edit_article_path(@article), :class => 'button' %> <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure you want to delete this post? This cannot be un-done.'}, class: 'button' %>
        </div>
      </div>
    <% end %>
  <% end %>

</div>
