
<%#
------------------
NEW BLOG POST PAGE
------------------
%>

<div id="content-blog-new">

  <p>New blog post</p>

  <%= form_for :article, url: articles_path do |f| %>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %><br />
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>

</div>
