<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">

      <div id="header-wrapper">
        <div id="header">
          <h2>Website Title</h2>
        </div>
      </div>

      <div id="menu-wrapper">
        <div id="menu">
          <%= link_to 'Home', root_path, :class => 'button button-primary' %>
          <%= link_to 'Blog', articles_path, :class => 'button button-primary' %>
        </div>
      </div>

      <div id="admin-menu-wrapper">
        <div id="admin-menu">
          <%= link_to 'New User', signup_path, class: 'button' %>
        </div>
      </div>

      <hr />

      <div id="content-wrapper">
        <div id="content">
          <%= render 'shared/flash_messages' %>
          <%= yield %>
        </div>
      </div>

      <div id="footer-wrapper">
        <div id="footer">
        </div>
      </div>

      <% if Rails.env.development? %>
        <div id="rails-debug">
          <%= debug(params) %>
        </div>
      <% end %>

    </div>
  </body>
</html>
