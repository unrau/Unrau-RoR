
<%#
--------------
FORM FOR USERS
--------------
%>

<%= form_for @user do |form| %>

  <%= render 'shared/error_messages' %>

  <div class="row">
    <div class="twelve columns">
      <%= form.label :name %>
      <%= form.text_field :name, :class => 'u-full-width field' %>
    </div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <%= form.label :email %>
      <%= form.email_field :email, :class => 'u-full-width field' %>
    </div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <%= form.label :password %>
      <%= form.password_field :password, :class => 'u-full-width field' %>
    </div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <%= form.label :password_confirmation, "Confirm Password" %>
      <%= form.password_field :password_confirmation, :class => 'u-full-width field' %>
    </div>
  </div>
  <p>&nbsp;</p>
  <div class="row">
    <div class="twelve columns">
      <%= form.submit 'Submit', class: 'button' %> <%= link_to 'Cancel', root_path, :class => 'button' %>
    </div>
  </div>

<% end %>
